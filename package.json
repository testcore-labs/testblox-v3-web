{
  "name": "testblox-v3",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "test": "bun src/cli/test.ts",
    "purge-logs": "bun src/cli/purge_logs.ts",

    "dev:watch": "bun nodemon \"--watch views/**/*.twig --watch translation/*.yaml --watch config.yaml --watch views/*.twig --watch src -x \"bun run web\" -e ts,twig,yaml\"",
    "web": "bun src/main.ts",
    "build-css:watch": "bun nodemon \"--watch scss/*.scss -x \"bun run build-css\" -e scss\"",
    "build-css": "sass scss/core.scss scss/core.pcss && postcss scss/core.pcss --use autoprefixer -o public/assets/css/core.css"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/multer": "^1.4.11"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dateformat": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/locale": "^0.1.4",
    "@types/lowdb": "^1.0.15",
    "@types/twig": "^1.12.16",
    "@types/yaml": "^1.9.7",
    "argon2": "^0.40.3",
    "autoprefixer": "^10.4.19",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.3",
    "cbor": "^9.0.2",
    "cloudflare-express": "^0.0.1",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-query-parser": "^1.3.3",
    "express-rate-limit": "^7.3.0",
    "express-validator": "^7.1.0",
    "fast-printf": "^1.6.9",
    "get-root-path": "^2.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.0",
    "postcss-cli-simple": "^4.0.1",
    "postgres": "^3.4.4",
    "sanitizer": "^0.1.3",
    "sass": "^1.77.4",
    "timeago.js": "^4.0.0-beta.3",
    "twig": "^1.17.1",
    "xss": "^1.0.15",
    "yaml": "^2.4.2"
  }
}
