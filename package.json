{
  "name": "testblox-v3",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "test": "bun src/cli/test.ts",
    "dev:bun:watch": "bun --watch src/main.ts # anything but .ts doesnt work",
    "dev:bun:hot": "bun --hot src/main.ts # anything but .ts doesnt work",
    "dev:watch": "nodemon -e ts,twig,yaml --exec 'bun src/main.ts'",
    "web": "bun src/main.ts",
    "build-css:watch": "bun nodemon --watch scss/*.scss -x \"bun run build-css\" -e scss",
    "build-css": "sass scss/core.scss scss/core.pcss && postcss scss/core.pcss --use autoprefixer -o public/assets/css/core.css",
    "cli:purge-logs": "bun src/cli/purge_logs.ts",
    "cli:user:edit": "bun src/cli/user/edit.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/multer": "^1.4.11"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dateformat": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/locale": "^0.1.4",
    "@types/lowdb": "^1.0.15",
    "@types/yaml": "^1.9.7",
    "argon2": "^0.40.3",
    "autoprefixer": "^10.4.20",
    "bbcode-ts": "1.0.4",
    "better-sse": "^0.12.1",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.3",
    "cbor": "^9.0.2",
    "cli-select": "^1.1.2",
    "cloudflare-express": "^0.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "discord.js": "^14.15.3",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-query-parser": "^1.3.3",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "fast-printf": "^1.6.9",
    "get-folder-size": "^5.0.0",
    "get-root-path": "^2.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
