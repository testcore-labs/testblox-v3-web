<a href="/game/{{ game.id }}/view" class="mb-3 d-flex flex-column game-card" style="padding: 0; margin-top: 0.3em;">
  <div class="img-fluid pos-relative">
    <img src="{{ game.get_icon() }}" class="round-4 img-fluid">
    {% if game.info.bc_only %}
    <div class="bottom-0 left-0 hide-stuff ridge-100 pos-absolute py-1 ps-2 pe-6 round-0" style="background: #0c0c0c;"><img width=22 height=22 src="/assets/img/bc_icon.svg"></div>
    {% endif %}
    <div class="more-info d-flex flex-column gap-3 pos-absolute right-0 bottom-0 overflow-none border-box w-100 h-100">
      <div class="d-flex flex-column gap-3 p-2 break-all overflow-none round-2" style="background: linear-gradient(180deg, rgba(0,0,0, 0.975) 0%, rgba(0,0,0, 0.35) 100%); height: 100%;">
        <div class="d-flex flex-row gap-3 ai-center">
          <img width=24 height=24 class="round-2" src="{{ game.user.get_headshot() }}">
          <b class="text-truncate">{{ game.user.username|e }}</b>
        </div>
        <span class="breakword text-truncate-l3 overflow-none">{{ (game.description|e ?? "<i class='breakword'>no description set.</i>") }}</span>
      
        <object>
          <a href="/game/{{ game.id }}/play" class="btn-play d-flex ai-center round-3 pos-absolute as-baseline" style="right: 0.25em; bottom: 0.25em; height: 16px; width: 16px; padding: 0.2em 0.3em 0.25em 0.1em; font-size: 1.55em;"><i class="bi bi-play-fill mx-auto"></i></a>
        </object>
      </div>
    </div> 
  </div>
  <div class="d-flex flex-column border-box m-1 my-0"><h5 class="text-muted breakword">{{ game.title|e|truncate(24, "â€¦") }}</h5>
    <div class="d-flex flex-row gap-6">
      <span class="d-flex flex-row gap-3 ai-center text-extramuted mt-1"><i class="bi bi-star-half"></i> <b class="breakword">1%</b></span>
      <span class="d-flex flex-row gap-3 ai-center text-extramuted mt-1"><i class="bi bi-people"></i> <b class="breakword">1</b></span>
    </div>
  </div>
</a>{# in this case, default meaning default **style** #}