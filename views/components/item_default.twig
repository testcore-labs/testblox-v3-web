<a href="/catalog/{{ item.id }}/view" class="mb-3 d-flex flex-column item-card" style="padding: 0; margin-top: 0.3em;">
  <div class="img-fluid pos-relative">
    <img src="{{ item.get_icon() }}" class="round-4 img-fluid">
    {% if item.data.data.limited %}
    <div class="bottom-0 left-0 hide-stuff ridge-100 pos-absolute py-1 ps-2 pe-6 round-0" style="background: #0c0c0c;"><img width=22 height=22 src="/assets/img/limited.png"></div>
    {% endif %}
    <div class="more-info d-flex flex-column gap-3 pos-absolute overflow-none right-0 bottom-0 border-box w-100 h-100">
      <div class="d-flex flex-column gap-3 p-2 break-all overflow-none round-2" style="background: linear-gradient(180deg, rgba(0,0,0, 0.975) 0%, rgba(0,0,0, 0.35) 100%); height: 100%;">
        <div class="d-flex flex-row gap-3 ai-center">
          <img width=24 height=24 class="round-2" src="{{ item.user.get_headshot() }}">
          <b class="text-truncate">{{ item.user.username|e }}</b>
        </div>
        <span class="breakword text-truncate-l2 overflow-none">{{ (item.description|e ?? "<i class='breakword'>no description set.</i>")|truncate(96, "…") }}</span>
      
        {# <object>
          <a href="/item/{{ item.id }}/play" class="btn-play d-flex ai-center jc-center round-3 pos-absolute as-baseline" style="right: 0.25em; bottom: 0.25em; height: 16px; width: 16px; padding: 0.2em 0.3em 0.2em 0.1em; font-size: 1.55em;"><i class="bi bi-play-fill"></i></a>
        </object> #}
      </div>
    </div> 
  </div>
  <div class="d-flex flex-column border-box m-1 my-0"><h4 class="text-muted breakword">{{ item.title|e|truncate(24, "…") }}</h4>
    <div class="d-flex flex-row gap-6">
      <span class="d-flex flex-row gap-2 text-laccent ai-center mt-1"><i class="bi bi-gem"></i> <b class="breakword">{{ item.data.data.price|to_formatted(0) }}</b></span>
    </div>
  </div> 
</a>{# in this case, default meaning default **style** #}