<div class="d-flex flex-column gap-3 w-100">
  <div class="w-100">
    <h3 class="mb-2">customization</h3>
    <hr nomargin>
  </div>

  <div class="d-flex flex-column gap-5">
  <div x-data="{ description: cuser.data.description }" 
  @update="cuser.data.description = description; 
  const resp = await (await fetch(`${api_endpoint.v1}/user/description/set?desc=${description}`)).json();
  $dispatch('popup-new', { type: resp.success ? 'success' : 'error', 
  title: 'updated description', msg: resp.message, time: 3 });"
  class="d-flex flex-column gap-1">
    <h5 class="mb-1">description</h5>
    <div class="d-flex flex-row pillify shadow-1 round-4 overflow-none">
    <textarea class="d-block w-100 shadowless"
      style="white-space: pre-wrap; min-height: 2em; height: 8em;"
      placeholder="hi, this is who i am."
      x-model="description"
      x-text="cuser.data?.description"
      y-only></textarea>
      <button class="bi bi-pencil-square shadowless" @click="$dispatch('update')"></button>
    </div>
    <small class="text-muted mt-1">a description must not exceed 250 characters.</small>
  </div>

  <div class="d-flex flex-column gap-5">
  <div x-data="{ css: cuser.data.settings.css }" 
  @update="cuser.data.settings.css = css; 
  let resp = await cuser.set_setting('css', css); 
  $dispatch('popup-new', { type: resp.success ? 'success' : 'error', 
  title: 'updated css', msg: resp.message, time: 3 });"
  class="d-flex flex-column gap-1">
    <h5 class="mb-1">css (styles)</h5>
    <div class="d-flex flex-row pillify shadow-1 round-4 overflow-none">
    <textarea class="d-block w-100 shadowless"
      style="white-space: pre-wrap; min-height: 2em; height: 8em;"
      placeholder="element {
  property: value 
}"
      x-model="css"
      x-text="cuser.data?.settings?.css"
      y-only></textarea>
      <button class="bi bi-pencil-square shadowless" @click="$dispatch('update')"></button>
    </div>
    <small class="text-muted mt-1">if you find any issues, please report them.</small>
  </div>

  </div>
</div>